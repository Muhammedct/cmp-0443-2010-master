<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">
        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/androidLogsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
        </androidx.core.widget.NestedScrollView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/logSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search" />

        <Button
            android:id="@+id/logClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">

        <AutoCompleteTextView
            android:id="@+id/logDay"
            android:layout_width="122dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:hint="Day" />

        <ImageView
            android:id="@+id/imageDay"
            android:layout_width="21dp"
            android:layout_height="38dp"
            android:src="@drawable/arrow"/>

        <AutoCompleteTextView
            android:id="@+id/logMonth"
            android:layout_width="122dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:hint="Month" />

        <ImageView
            android:id="@+id/imageMonth"
            android:layout_width="21dp"
            android:layout_height="38dp"
            android:src="@drawable/arrow"/>

        <AutoCompleteTextView
            android:id="@+id/logYear"
            android:layout_width="110dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:hint="Year" />

        <ImageView
            android:id="@+id/imageYear"
            android:layout_width="21dp"
            android:layout_height="38dp"
            android:src="@drawable/arrow"/>


    </LinearLayout>


</LinearLayout>